<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket</title>
</head>
<body>

    <form id="insertForm">
      <label for="ticket_name">ticket_name:</label>
      <input type="text" id="ticket_name" name="ticket_name" placeholder="ticket_name"><br><br>
      <label for="description">description:</label>
      <input type="text" id="description" name="description" placeholder="description"><br><br>
      <label for="sub_category">sub_category:</label>
      <input type="text" id="sub_category" name="sub_category" placeholder="sub_category"><br><br>
      <button type="submit">Insert Data</button>
    </form>
    <div id="insertMessage"></div>

    <script>
      document.getElementById('insertForm').addEventListener('submit', function(event) {
      event.preventDefault();
      const formData = new  URLSearchParams(new FormData(document.getElementById('insertForm')));

      console.log('Ticket Name:', formData.get('ticket_name'));
      fetch('http://localhost:3000/insertData', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',

        },
        body: formData.toString()
      })
      .then(response => response.json())
      .then(data => {
        const insertMessageElement = document.getElementById('insertMessage');
        if (data.success) {
          insertMessageElement.textContent = data.message;

          this.reset();
        } else {
          insertMessageElement.textContent = data.error || 'Error inserting data';
        }
      })
      .catch(error => console.error('Error inserting data:', error));
    });
    </script>
</body>
</html>