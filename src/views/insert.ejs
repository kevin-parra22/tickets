    <form id="insertForm">
      <label for="id_ticket">id_ticket:</label>
      <input type="text" id="id_ticket" name="id_ticket" placeholder="id_ticket"><br><br>
      <label for="comment">comment:</label>
      <input type="text" id="comment" name="comment" placeholder="comment"><br><br>
      <label for="comment_concat">comment_concat:</label>
      <input type="text" id="comment_concat" name="comment_concat" placeholder="comment_concat"><br><br>
      <label for="id_creator">id_creator:</label>
      <input type="text" id="id_creator" name="id_creator" placeholder="id_creator"><br><br>
      <label for="date">date:</label>
      <input type="date" id="date" name="date" placeholder="date"><br><br>
      <label for="HowSaveChat">HowSaveChat:</label>
      <input type="text" id="HowSaveChat" name="HowSaveChat" placeholder="HowSaveChat"><br><br>
      <label for="id_task">id_task:</label>
      <input type="text" id="id_task" name="id_task" placeholder="id_task"><br><br>
      <button type="submit">Insert Data</button>
    </form>
    <div id="insertMessage"></div>

    <script>
      document.getElementById('insertForm').addEventListener('submit', function(event) {
      event.preventDefault();
      const formData = new  URLSearchParams(new FormData(document.getElementById('insertForm')));

      fetch('http://localhost:3000/insertData', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',

        },
        body: formData.toString()
      })
      .then(response => response.json())
      .then(data => {
        const insertMessageElement = document.getElementById('insertMessage');
        if (data.success) {
          insertMessageElement.textContent = data.message;

          this.reset();
        } else {
          insertMessageElement.textContent = data.error;
          console.log(data.error);
        }
      })
      .catch(error => console.error('Error inserting data:', error));
    });
    </script>
</body>
